/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@chat/*": ["app/presentation/components/chat/*"],
      "@sidebarMenu/*": ["app/presentation/components/sidebar-menu/*"],
      "@typingLoader/*": ["app/presentation/components/typing-loader/*"],
      "@textBoxes/*": ["app/presentation/components/text-boxes/*"],
      "@useCases/*": ["app/core/use-cases/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@pipes/*": ["app/presentation/pipes/*"]
    },
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
